<Window x:Class="MyBook.BookViewPort"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:MyBook"
        Title="BookViewer" Height="300" Width="300" ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="myStyle" TargetType="Button">
            <Setter Property="Background" Value="Orange" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="4" />
        </Style>
    </Window.Resources>
    <Grid Background="#FFB49A25">
        <src:LimitedTextBox x:Name="LeftBox" HorizontalAlignment="Left" Margin="36,113,0,0"  VerticalAlignment="Top" TextWrapping="Wrap" AcceptsTab="True" AcceptsReturn="True" VerticalScrollBarVisibility="Disabled" MaxLines="3" MinLines="3" Width="95" TextChanged="CheckLines" />
        <src:LimitedTextBox x:Name="RightBox" HorizontalAlignment="Left" Margin="160,115,0,0"  VerticalAlignment="Top" TextWrapping="Wrap" AcceptsTab="True" AcceptsReturn="True" VerticalScrollBarVisibility="Disabled" MaxLines="3" MinLines="3" Width="95" TextChanged="CheckForward" />
        <Button Style="{StaticResource myStyle}" Content="Button" Height="30" HorizontalAlignment="Left" Margin="36,42,0,0" Name="button1" VerticalAlignment="Top" Width="95" />
    </Grid>
</Window>
