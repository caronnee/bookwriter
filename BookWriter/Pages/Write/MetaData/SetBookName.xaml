<Window x:Class="MyBook.Pages.Meta.SetBookName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SetBookName"   SizeToContent="Height">
    <DockPanel LastChildFill="True">
        <Label>Set name of the book: </Label>
        <Button DockPanel.Dock="Right" Width="60" Click="DoneClick">Done</Button>
        <Button DockPanel.Dock="Right" Width="60" Click="CancelClick">Cancel</Button>
        <TextBox x:Name="BookName" VerticalAlignment="Center"></TextBox>
    </DockPanel>
</Window>
