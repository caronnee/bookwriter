<UserControl x:Class="ImagePlugin.ImageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:riddle="clr-namespace:RiddleInterface;assembly=RiddleInterface"
             xmlns:local="clr-namespace:ImagePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <riddle:FullPathConverter x:Key="x_full_path_converter"></riddle:FullPathConverter>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <TextBox Text="{Binding Data.Header}" DockPanel.Dock="Top"></TextBox>
        <TextBox Text="{Binding Data.Footer}" DockPanel.Dock="Bottom"></TextBox>
        <Image Source="{Binding Data.ImagePath}"></Image>
    </DockPanel>
</UserControl>
