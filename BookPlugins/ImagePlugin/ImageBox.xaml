<UserControl x:Class="ImagePlugin.ImageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:riddle="clr-namespace:RiddleInterface;assembly=RiddleInterface"
             xmlns:local="clr-namespace:ImagePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:ImageConverter x:Key="valueconverter"></local:ImageConverter>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <Label Content="{Binding Data.Header}" DockPanel.Dock="Top" HorizontalAlignment="Center"></Label>
        <Label Content="{Binding Data.Footer}" DockPanel.Dock="Bottom" HorizontalAlignment="Center"></Label>
        <Image Source="{Binding Data.ImagePath, Converter={StaticResource valueconverter}}" />
    </DockPanel>
</UserControl>
