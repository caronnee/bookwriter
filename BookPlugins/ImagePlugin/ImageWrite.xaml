<UserControl x:Class="ImagePlugin.ImageWrite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:riddle="clr-namespace:RiddleInterface;assembly=RiddleInterface"
             xmlns:local="clr-namespace:ImagePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel>
  <UniformGrid Columns="2" Height="auto">
    <Label>Header</Label>
    <TextBox Text="{Binding Data.Header}" />
    <Label>Footer</Label>
    <TextBox Text="{Binding Data.Footer}" />
    <Label>Image</Label>
    <DockPanel>
      <Button Click="click_load_image" DockPanel.Dock="Right" Width="30px">...</Button>
      <TextBox x:Name="x_image_path" DockPanel.Dock="Right" Text="{Binding Path=Data.ImagePath}"/>
    </DockPanel>
  </UniformGrid>
  </StackPanel>
</UserControl>
