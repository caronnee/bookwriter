<UserControl x:Class="ImagePlugin.ImageWrite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:riddle="clr-namespace:RiddleInterface;assembly=RiddleInterface"
             xmlns:local="clr-namespace:ImagePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <riddle:FullPathConverter x:Key="x_path_converter" />
    </UserControl.Resources>
    <Grid>
        <TextBox Text="{Binding Data.Header}" />
        <TextBox Text="{Binding Data.Footer}" />
        <DockPanel LastChildFill="True">
            <Button Click="click_load_image">...</Button>
            <TextBox x:Name="x_image_path" DockPanel.Dock="Right">
                <TextBox.Text>
                    <MultiBinding StringFormat="{}{0} + {1}">
                        <Binding Path="BaseFolder" />
                        <Binding Path="Data.ImagePath" />
                    </MultiBinding>
                </TextBox.Text>
            </TextBox>
        </DockPanel>
    </Grid>
</UserControl>
