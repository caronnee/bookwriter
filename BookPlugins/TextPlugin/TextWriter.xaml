<UserControl x:Class="TextPlugin.TextWriter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextPlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="x_text"
             >
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <TextBox x:Name="x_description" DockPanel.Dock="Top" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Owner.Data.Description, ElementName=x_text}"/>
  </Grid>
</UserControl>
