<UserControl x:Class="DecisionMaker.DecisionEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DecisionMaker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="True">
        <Button x:Name="x_remove" DockPanel.Dock="Right">Remove</Button>
        <ComboBox x:Name="x_scene" DockPanel.Dock="Right" ItemsSource="{Binding Scenes}" DisplayMemberPath="Name" />
        <TextBox x:Name="x_description" DockPanel.Dock="Left">Enter text</TextBox>
    </DockPanel>
</UserControl>
