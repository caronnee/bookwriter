<UserControl x:Class="DecisionPlugin.SingleDecision" x:Name="x_decision_choose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:riddle="clr-namespace:RiddleInterface;assembly=RiddleInterface"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
    </UserControl.Resources>
    <UniformGrid Columns="3">
        <!-- Description of the decision -->
    <TextBox TextWrapping="Wrap" x:Name="x_decision_text" Text="{Binding Decision.Action, ElementName=x_decision_choose}"/>
        <!-- After answer what should be shown -->
    <TextBox x:Name="x_decision_outcome" Text="{Binding Decision.Reaction, ElementName=x_decision_choose}" />
    <!-- Possible outcomes linked with this decision -->
    <ComboBox x:Name="x_crossroad" SelectedItem="{Binding Decision.Id, ElementName=x_decision_choose}" ItemsSource="{Binding Scenes}" DisplayMemberPath="Name"/>
    </UniformGrid>
</UserControl>
