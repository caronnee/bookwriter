<Window x:Class="TestFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestFlip"
        xmlns:flip="clr-namespace:Book;assembly=Book"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="SandyBrown">
    <flip:BookContainer >
        <flip:BookContainer.ItemTemplate>
            <DataTemplate>
                <Border >
                    <ContentControl Content="{Binding .}" />
                </Border>
            </DataTemplate>
        </flip:BookContainer.ItemTemplate>
        <local:UserControl1 />
        <local:UserControl2 />
        <local:UserControl3 />
        <local:UserControl4 />
        <local:UserControl5 />
        <local:UserControl6 />
        <local:UserControl7 />
    </flip:BookContainer>
</Window>
