<Window x:Class="TestFlip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestFlip"
        xmlns:flip="clr-namespace:Book;assembly=Book"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="SandyBrown">
    <flip:BookContainer >
        <flip:BookContainer.ItemTemplate>
            <DataTemplate>
                <Border BorderThickness="4" BorderBrush="Gray" Background="Transparent">
                    <ContentControl Content="{Binding .}" />
                </Border>
            </DataTemplate>
        </flip:BookContainer.ItemTemplate>
        <local:UserControl1 Background="Red" />
        <local:UserControl2 Background="Blue" />
        <local:UserControl3 Background="Green" />
        <local:UserControl4 Background="Chocolate" />
        <local:UserControl5 Background="DarkBlue" />
        <local:UserControl6 Background="Firebrick" />
    </flip:BookContainer>
</Window>
