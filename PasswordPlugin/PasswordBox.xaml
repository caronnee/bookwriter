<UserControl x:Class="PasswordPlugin.PasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordPlugin"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30px" />
            <RowDefinition Height="30px" />
            <RowDefinition Height="30px" />
        </Grid.RowDefinitions>
        <TextBox x:Name="background" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
      AcceptsReturn = "True"
      AcceptsTab = "True"
                 >Lorem Ipsum</TextBox>
        <TextBox Grid.Row="1" x:Name="answer" PasswordBox.PasswordChanged="Answer_PasswordChanged"></TextBox>
        <Label Grid.Row="3" x:Name="hint">Hint</Label>
        <Button Grid.Row="2" Click="verifyClick">Verify</Button>
    </Grid>
</UserControl>
